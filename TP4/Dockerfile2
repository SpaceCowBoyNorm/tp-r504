FROM debian:11

RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y build-essential pkg-config python3-dev python3-pip default-libmysqlclient-dev && \
    pip3 install --upgrade pip && \
    pip3 install flask-mysqldb mysql-connector-python

RUN mkdir -p /srv/templates/

COPY index.html /srv/templates/

CMD ["flask", "--app", "/srv/app_1.py", "run", "--host=0.0.0.0"]
